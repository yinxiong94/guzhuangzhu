.db {
  width: 100%;
}

.db .header {
  width: 100%;
  height: 340rpx;
  position: relative;
}

.db .header image {
  width: 341rpx;
  height: 139rpx;
  position: absolute;
  left: 50%;
  top: 75rpx;
  transform: translateX(-50%);
}

.db .mian {
  width: 93%;
  margin: 0 auto;
}

.db .mian .list {
  width: 100%;
  height: 104rpx;
  border-bottom: 1rpx solid rgba(222, 222, 222, 1);
  position: relative;
  padding-top: 52rpx;
  box-sizing: border-box;
}

.db .mian .list input {
  font-size: 28rpx;
  padding-left: 204rpx;
  color: rgba(197, 197, 197, 1);
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}

.db .mian .list .ren {
  width: 31rpx;
  height: 34rpx;
  position: absolute;
  top: 62rpx;
  left: 20rpx;
}
.db .mian .list .yan{
  width: 34rpx;
  height: 22rpx;
  position: absolute;
  right: 36rpx;
  top: 68rpx;
}
.db .btn{
  text-align: center;
  width: 690rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fbc00e;
  color: #fff;
  border-radius: 45rpx;
  margin: 0 auto;
  margin-top: 125rpx;
  box-shadow:0 4px 6px #fbc00e;
}

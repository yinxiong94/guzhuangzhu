.db {
  width: 100%;
  padding-bottom: 2rpx;
  border-top: 1px solid #eee;
}

.db .header {
  width: 92%;
  margin: 0 auto;
}

.db .header .header_title {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(33, 33, 33, 1);
  padding-top: 18rpx;
}

.db .header .header_tiem {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}

.db .header .header_tiem .tiem {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  height: 41rpx;
  line-height: 41rpx;
  text-align: center;
}

.db .header .header_tiem image {
  width: 122rpx;
  height: 41rpx;
}

.db .header .text {
  width: 100%;
  margin-top: 36rpx;
}

.db .header .text .text_wz {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.db .header .text image {
  margin: 21rpx 0 30rpx 0;
  width: 670rpx;
  height: 442rpx;
}

.cart{
  margin: auto;
  margin-top:20rpx;
  position: relative;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(219,219,219,1);
  width: 92%;
  background: rgba(193, 193, 193, .3);
  border-radius: 14rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx
}
.cart-item{
  display: inline-block;
  vertical-align: middle;
  position: relative
}
.img{
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx
}
.cart-item-1{
  display: inline-block;
  vertical-align: top;
}
.cart-item-1 view{
  padding: 6rpx 20rpx
}
.butt .sl{
  display: inline-block;
  width: 73rpx ;
  text-align: center;
  border-left: 2rpx solid #C6C6C6;
  border-right: 2rpx solid #C6C6C6;
  box-sizing: border-box;
  font-size: 26rpx;
  height: 46rpx ;
  vertical-align: top;
  padding-top: 5rpx
}
.butt{
    display: inline-block;
    border: 2rpx solid #c92f2f ;
    width: 68rpx;
    text-align: center;
    border-radius: 28rpx;
    height: 28rpx;
    line-height:28rpx;
    position: absolute;
    top:125rpx;
    right: -20rpx;
    color:#c92f2f;
    font-size: 20rpx 
}

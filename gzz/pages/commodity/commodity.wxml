<view class='yhq' wx:if="{{isshow}}" catchtouchmove="true">
    <view class='yhq_1'>领券</view>
    <view class="item" wx:for="{{list2}}">
    <view class="item_left">
      <view class="box">
        <view class="pirce">
          <text class="box_pirce">￥</text>
          <text class="money">{{item.couponMoney}}</text>
        </view>
        <view class="tips">
          {{item.couponName}}
        </view>
      </view>
    </view>
    <view class="data">
      <view class="effective">有效期</view>
      <view class="date">
        {{item.createTime}}-{{item.effectiveTime}}
      </view>
      <view class="surplus">
        <view>剩余{{item.surplusNum}}张</view>
      </view>
    </view>
    <view class="img">
      <view class="text">
        立即领取
      </view>
      <image lazy-load='true' src="/pages/img/ttt.png"></image>
    </view>
  </view>

  <view class='wc' bindtap='wc'>完成</view>

</view>

<view class="db">

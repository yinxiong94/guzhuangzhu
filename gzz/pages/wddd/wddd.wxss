.cart{
  position: relative;
  width: 100%;
  margin: auto;
  padding-left: 30rpx;
  
  padding-bottom: 30rpx;
  background: #fff;
  border-radius: 14rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(219,219,219,1);
}
.check{
  transform:scale(.6);
  position: relative;
  top:-10rpx;
  right: -80rpx
}
checkbox .wx-checkbox-input{
    border-radius: 28rpx;
    height: 56rpx;
    width: 56rpx;
    margin-top: -4rpx;
    border: 2rpx solid #c6c6c6;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #2c9b0e;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 40rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 38rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.cart-item{

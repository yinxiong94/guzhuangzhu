  <block>
    <view class='t1_item' bindtap='to' data-index="1">
        <image src="fmj.png" wx:if="{{index==0}}"></image>
        <image src="fmj1.png" wx:if="{{index==1}}"></image>
        <view>我的设备</view>
    </view>
  </block>
  <block>
    <view class='t2_item' bindtap='to' data-index="0">
        <image src="wd.png" wx:if="{{index==1}}"></image>
        <image src="wd1.png" wx:if="{{index==0}}"></image>

/* 板块2 */

.db .mian {
  width: 92%;
  margin: 0 auto;
  margin-top: 40rpx;
  height: 314rpx;
}

.db .mian .title {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(34, 34, 34, 1);
  font-weight: bold;
}

.db .mian .img {
  width: 698rpx;
  height: 255rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  position: absolute;
  overflow: hidden;
  border-radius: 36rpx 36rpx 0 0;
}

.db .mian .img image {
  width: 698rpx;
  height: 255rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius:36rpx 36rpx 0 0;
}

.db .mian .img .pirce {
  display: flex;
  position: absolute;
  z-index: 10;
  color: #fff;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.db .mian .img .pirce .pirce_item1 {
  font-size: 30rpx;
  line-height: 100rpx;
}

.db .mian .img .pirce .pirce_item2 {
  font-size: 60rpx;
  margin-left: 20rpx;
}

.db .mian .img .integral {
  position: absolute;
  z-index: 10;
  color: #fff;
  font-size: 26rpx;
  bottom: 60rpx;
  left: 20rpx;
}

/* list */


@import "../icon/stylesheet.wxss";

.db {
  width: 100%;
  background-color: #f1f1f1;
}
page{
  background-color: #f1f1f1;
}
.db .header {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.db .header .calendar {
  width: 40rpx;
  height: 42rpx;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}
.list_2{
  width: 100%;
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;

  margin-top: 20rpx
}
.list_2 view{
    width: 140rpx;
    text-align: center;
    padding: 5rpx 0 15rpx 0
}
.list_3{
  border-bottom: 4rpx solid #fbc00e;
  font-size: 36rpx;
  color:#fbc00e
}
.list_1{
  display: flex;
  justify-content: space-between;
  position: absolute;
  top:300rpx;
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color:#fff
}
.db .header .calendar image {
  width: 40rpx;
  height: 42rpx;
}

.db .header .text {
  text-align: center;
  color: #fff;
  position: absolute;
  top: 76rpx;
  left: 50%;
  transform: translateX(-50%);
}
.kong{
  font-size: 32rpx;
  text-align: center;
  margin-top: 200rpx
}
.db .header .xian {
  width: 39rpx;
  height: 4rpx;
  position: absolute;
  background-color: #fff;
  left: 50%;
  transform: translateX(-50%);
  top: 133rpx;
}

.db .header .pirce {
  position: absolute;
  top: 189rpx;
  color: #fff;
  left: 50%;
  transform: translateX(-50%);
  font-size: 60rpx;
  font-weight: bold;
}

.db .header image {
  width: 100%;
  height: 400rpx;
}

.db .list {
  width: 93%;
  margin: 0 auto;
  border-radius: 12rpx;
  background-color: #fff;
  margin-top:20rpx;
  position: relative;
  z-index: 10;
}

.db .list .list_zc .item {
  width: 100%;
  display: flex;
}

.db .list .list_zc .item .list_item {
  width: 550rpx;
  height: 78rpx;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx 26rpx 0 13rpx;
}

.db .list .list_zc .item .list_item image {
  width: 29rpx;
  height: 35rpx;
  margin-top: 4rpx;
}

.db .list .list_zc .item .list_item .text {
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-left: 33rpx;
}

.db .list .list_zc .item .list_item_right {
  display: flex;
}

.db .list .list_zc .item .list_item_right text {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(79, 143, 243, 1);
  margin-top: 27rpx;
}

.db .list .list_zc .item .list_item_right view {
  line-height: 78rpx;
  margin-left: 20rpx;
  margin-right: 25rpx;
}

.db .list .list_zc .list_td {
  display: flex;
  height: 78rpx;
  line-height: 78rpx;
  justify-content: space-around
}

.db .list .list_zc .list_td .tiem {
  font-size: 22rpx;
  width: 130rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden
}

.db .list .list_zc .list_td .title {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(36, 36, 36, 1);
  text-align: center
}

.db .list .list_zc .list_td .pirce {
  width: 160rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(79, 143, 243, 1);
  text-align: center;
}

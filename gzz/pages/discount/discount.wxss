.db {
  width: 100%;
  border-top: 1rpx solid #f1f1f1;
  overflow: hidden;
}

.db .header {
  width: 95%;
  margin: 0 auto;
  height: 90rpx;
  display: flex;
  justify-content: center;
}

.db .header view {
  width: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(186, 186, 186, 1);
  margin-right: 100rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
}

.db .header .jin {
  color: #fbc00e;
  border-bottom:6rpx solid #fbc00e
}

.db .header view .xian {
  position: absolute;
  width: 26rpx;
  height: 6rpx;
  background-color: #fbc00e;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  top: 10rpx
}

.db .header view:nth-child(3) {
  margin-right: 0;
}

.db .item {
  width: 710rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  border-radius: 14rpx;
  overflow: hidden;
  border: 1px solid rgba(251, 192, 14, 1);
}

.db .item .item_left {
  width: 205rpx;
  height: 180rpx;
}

.db .item .item_left .box {
  width: 100%;
  height: 152rpx;
  border-right: 2rpx dashed rgba(201, 201, 201, 1);
  margin-top: 13rpx;
  overflow: hidden;
}

.db .item .item_left .box .pirce {
  text-align: center;
  margin-top: 24rpx;
}

.db .item .item_left .box .pirce .box_pirce {
  font-size: 42rpx;
  font-weight: bold;
  color: rgba(177, 138, 62, 1);
}

.db .item .item_left .box .pirce .money {
  font-size: 72rpx;
  font-weight: bold;
  color: rgba(177, 138, 62, 1);
  height: 54rpx;
  line-height: 54rpx;
}

.db .item .item_left .box .pirce .hui {
  color: #bdbdbd;
}

.db .item .item_left .box .tips {
  margin-top: 26rpx;
  font-size: 30rpx;
  text-align: center;
  color: rgba(177, 138, 62, 1);
  height: 28rpx;
  line-height: 28rpx;
}

.db .item .item_left .box .hui {
  color: #bdbdbd;
}

.db .item .img {
  width: 110rpx;
  height: 180rpx;
  position: relative;
}

.db .item .img .text {
  position: absolute;
  width: 28rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #fff;
  margin: 0;
  padding: 15rpx 0;
  box-sizing: border-box;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.db .item .img image {
  width: 110rpx;
  height: 180rpx;
}

.db .item .data {
  flex: 1;
  height: 180rpx;
  margin-left: 17rpx;
}

.db .item .data .effective {
  width: 72rpx;
  height: 23rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(163, 163, 163, 1);
  margin-top: 34rpx;
}

.db .item .data .date {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(74, 74, 74, 1);
  margin-top: 20rpx;
}

.db .item .data .surplus {
  width: 151rpx;
  height: 34rpx;
  background: rgba(177, 138, 62, 0.1);
  border-radius: 4px;
  text-align: center;
  margin-top: 20rpx;
}

.db .item .data .surplus view {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(220, 166, 0, 1);
  height: 34rpx;
  line-height: 34rpx;
}

<view class="db">
  <view class='kh'>卡号：</view>
  <input type='text' placeholder='请输入充值卡号' class='czkh'></input>


  <view class="mian">
    <view  wx:for="{{list}}" wx:key="index" data-id="{{index}}" class="list {{index==index1?'red':''}}">
      <view>
        <text>{{item.amount}}元</text>
        <text class="list_s">送{{item.giveMoney}}元</text>
      </view>
    </view>
    
  </view>
  <view class="payment">
    <view class='item'>
      <view class="item_left">
        <image lazy-load='true' src="/pages/img/zhifu1.png"></image>
        <text>微信支付</text>
      </view>
      <view class="item_right">
        <checkbox class='check'></checkbox>
      </view>
    </view>
  </view>
  <view class="footer">
    <view class="Agreement">点击充值表示你已同意
      <text>《充值协议》</text>
    </view>
  </view>
  <view class="btn" bindtap='chongzhi'>去充值</view>
</view>
@import "../icon/stylesheet";

view {
  box-sizing: border-box;
}

.hhh {
  width: 100%;
  height: 1rpx;
  background-color: #eee;
}

.db {
  width: 100%;
}

.db .header {
  width: 100%;
  background-color: #f2f4ff;
}

.db .header .identity {
  padding: 0 20rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
  line-height: 80rpx;
  height: 80rpx;
}
.db .header .item {
  padding: 0 20rpx;
  width: 100%;
  display: flex;
  padding-top: 29rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 30rpx;
  background-color: #fff;
}

.db .header .item:nth-child(3) {
  margin-bottom: 24rpx;
}
.btn1{
  width: 500rpx;
  height: 100rpx;
  background: #f5d164;
  line-height: 100rpx;
  text-align: center;
  border-radius: 30rpx;
  border:0 !important;
  margin-top: 50rpx;
  color:#fff
}
.db .header .item text {
  margin-right: 100rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
  font-family: PingFang-SC-Medium;
  line-height: 55rpx;
  opacity: 0.5;
}

.db .header .item .input {
  font-size: 30rpx;
  color: rgba(33, 33, 33, 1);
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  flex: 1;
}

.check {
  transform: scale(0.6);
}

checkbox .wx-checkbox-input {
  border-radius: 28rpx;
  height: 32rpx;
  width: 33rpx;
  margin-top: -4rpx;
  border: 2rpx solid #c6c6c6;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #fbc00e;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 32rpx;
  height: 33rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.db .mian {
  width: 100%;
  background-color: #f2f4ff;
}

.db .mian .identity {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.db .mian .identity .text1 {
  color: rgba(33, 33, 33, 1);
  line-height: 80rpx;
  height: 80rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  font-size: 24rpx;
}

.db .mian .identity .text2 {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(245, 209, 100, 1);
  line-height: 80rpx;
}

.db .mian .list {
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding: 0 20rpx;
  position: relative;
  background-color: #fff;
}

.db .mian .list text {
  opacity: 0.5;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
  line-height: 88rpx;
}

.db .mian .list input {
  margin-left: 100rpx;
  height: 88rpx;
  flex: 1;
  line-height: 88rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
}

.db .mian .list .img {
  width: 203rpx;
  height: 49rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.db .mian .list .jiantou {
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 255, 255, 1);
  margin-left: 681rpx;
}

.db .mian .list .yzm {
   position: absolute;
  right: 10rpx;
  top: 20rpx;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  background-color: #FBC00E;
  color: #fff;
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  z-index: 1000
}

.db .footer {
  width: 93%;
  background-color: #fff;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.db .footer .footer_a {
  display: flex;
}

.db .footer .footer_a .footer_text {
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(33, 33, 33, 1);
  line-height: 54rpx;
}
.db .footer .footer_a .footer_text text{
  color:#4768F3;
}
.db .footer image{
  width: 559rpx;
  height: 133rpx;
  margin: 0 auto;
  margin-top: 101rpx;
}
